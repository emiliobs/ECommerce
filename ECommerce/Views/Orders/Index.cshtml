@model IEnumerable<ECommerce.Models.Order>

@{
    ViewBag.Title = "Orders";
   
}


            <h2>Orders</h2>
          
            <p>
                @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @*@Html.DisplayNameFor(model => model.Customer.UserName)*@
                        Customer
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remarks)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remarks)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }, new { @class = "btn btn-default" })
                        </td>
                    </tr>
                }

            </table>
