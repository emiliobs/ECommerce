@model ECommerce.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container">
    <div class="col-lg-6">
        <div>
            <h4>Product</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Category.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Category.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Company.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Company.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Tax.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tax.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.BarCode)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BarCode)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Remarks)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Remarks)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>

                <dd>
                    @if (!string.IsNullOrEmpty(Model.Image))
            {
                        @*<img src="@Url.Content(item.Image)" alt="Image" style="width:100px; height:100px; max-width:100%; height:auto;" />*@
                        <img src="@Url.Content(Model.Image)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                    }
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }, new { @class = "btn btn-info" })
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-default" })
        </p>

    </div>
    <div class="col-lg-6">
        <h4>Inventory</h4>
        <hr />
        @if (Model.Inventories.Count == 0)
        {
            <h5>No Inventories registred yet.</h5>
        }
        else
        {
            <table class="table">
                <tr>
                    <th align="right">
                        WareHouse
                    </th>
                    <th>
                        Stock
                    </th>
                </tr>

                @foreach (var item in Model.Inventories.ToList())
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WareHouse.Name)
                        </td>
                        <td>
                         
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                    </tr>                
                  
                }
                           
               
                <tr>

                    <td>
                        <hr />
                        <strong>Total</strong>
                    </td>
                    <td>
                        <hr />      
                        <strong> @Html.DisplayFor(model => model.Stock)</strong>
                    </td>
                </tr>

            </table>
        }
    </div>
</div>
